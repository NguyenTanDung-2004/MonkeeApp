<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Màu nền của EditText -->
    <solid android:color="@color/Dung_background_input" />
    <!-- Đường viền của EditText -->
    <stroke
        android:width="2dp"
        android:color="@color/Dung_input_error"/>
    <!-- Góc bo tròn của EditText -->
    <corners android:radius="8dp" />
    <!-- Padding bên trong EditText -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp" />
</shape>
