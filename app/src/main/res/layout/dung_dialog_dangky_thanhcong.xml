<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/successfull"
        android:layout_centerHorizontal="true"
        />

    <com.example.monkeeapp.Dung.custom_textview.Baloo2_regular
        android:id="@+id/textview"
        android:layout_width="392dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_below="@id/imageView"
        android:text="Tuyệt vời! Bạn đã đăng ký mật khẩu thành công!"
        android:textAlignment="center"
        android:textSize="35px"
        android:textStyle="bold"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="500px"
        android:id="@+id/tieptuc"
        android:layout_width="match_parent"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:layout_height="125px"
        android:background="@drawable/dung_shape_button_danhnhap"
        android:text="Quay lại đăng nhập"
        android:textColor="@color/black"
        android:textSize="30px"></androidx.appcompat.widget.AppCompatButton>




</RelativeLayout>