<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500px"
    android:paddingLeft="30px"
    android:paddingRight="30px"
    android:paddingTop="50px"
    android:orientation="vertical"
    tools:context=".dung_dangky_email">
    <com.example.monkeeapp.Dung.custom_textview.Baloo2_textView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="60px"
        android:textSize="35px"
        android:textColor="@color/Dung_textColor_input"
        android:text="Chúng tôi đã gửi một mã gồm 4 chữ số cho mail của bạn."></com.example.monkeeapp.Dung.custom_textview.Baloo2_textView>

    <com.chaos.view.PinView
        android:layout_marginTop="50px"
        android:id="@+id/otp"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cursorVisible="true"
        android:inputType="number"
        android:itemBackground="@color/white"
        app:hideLineWhenFilled="false"
        app:itemCount="4"
        app:itemHeight="50dp"
        app:itemRadius="10dp"
        android:layout_gravity="center_horizontal"
        app:itemWidth="50dp"
        app:itemSpacing="20dp"></com.chaos.view.PinView>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="40px"
        android:id="@+id/tieptuc"
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:background="@drawable/dung_shape_button_danhnhap"
        android:text="Tiếp tục"
        android:textColor="@color/black"
        android:textSize="30px"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"></androidx.appcompat.widget.AppCompatButton>

</LinearLayout>